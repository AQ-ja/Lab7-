<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="user19"
            type="com.example.laboratorio5.Model" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.Resultados.ResultadosFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="168dp"
                    android:text="Resultados"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/rating"
                    android:layout_width="231dp"
                    android:layout_height="140dp"
                    android:text="TextView"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/encuestasNum"
                    android:layout_width="231dp"
                    android:layout_height="140dp"
                    android:text="TextView"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/nuevaEncuesta"
                    android:layout_width="315dp"
                    android:layout_height="85dp"
                    android:text="Nueva Encuesta"
                    android:layout_gravity="center_horizontal" />

                <Button
                    android:id="@+id/respuestasVer"
                    android:layout_width="319dp"
                    android:layout_height="72dp"
                    android:text="Ver Respuestas"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>


        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>